{
  "name": "refactorthis",
  "displayName": "RefactorThis",
  "description": "Common TS refactoring operations",
  "version": "1.0.0",
  "publisher": "AndreasTurku",
  "repository": {
    "url": "https://github.com/antur84/refactor-this"
  },
  "engines": {
    "vscode": "^1.41.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onCommand:refactorthis.to-arrow-syntax"
  ],
  "main": "./dist/extension",
  "contributes": {
    "commands": [
      {
        "command": "refactorthis.to-arrow-syntax",
        "title": "[RThis] Convert to arrow syntax (=>)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "compile": "webpack --mode none",
    "watch": "webpack --mode none --watch",
    "test-compile": "tsc -p ./"
  },
  "prettier": {
    "singleQuote": true
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/chai-spies": "^1.0.1",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.41.0",
    "chai": "^4.2.0",
    "chai-spies": "^1.0.0",
    "glob": "^7.1.5",
    "mocha": "^10.2.0",
    "prettier": "^1.19.1",
    "ts-loader": "^7.0.1",
    "tslint": "^5.20.0",
    "typescript": "^3.8.3",
    "vscode-test": "^1.2.2",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  }
}
